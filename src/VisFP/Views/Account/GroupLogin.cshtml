@model VisFP.Models.AccountViewModels.GroupLoginViewModel

@{
    ViewData["Title"] = "Логин пользователем группы " + Model.GroupName;
}

<h2>@ViewData["Title"]</h2>
<hr />

<form method="post" asp-action="GroupLogin">
    <input name="groupId" type="hidden" value="@Model.GroupId" />
    <div class="form-group">
        <label class="col-md-2 control-label" style="margin-top:7px">Пользователь:</label>
        <select class="selectpicker" name="userId" title="Выберите себя">
            @foreach (var user in Model.Users.OrderBy(x => x.RealName))
            {
                <option value="@user.Id">@user.RealName</option>
            }
        </select>
    </div>
    <div class="form-group">
        <div class="col-md-offset-3">
            <button type="submit" class="btn btn-success btn-lg">Войти</button>
        </div>
    </div>
</form>

