@model VisFP.Models.AccountViewModels.CreateUserViewModel
<h2>Добавление пользователя</h2>
<form asp-action="CreateUser" asp-controller="Account" method="post">
    <div class="form-horizontal">
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Login" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="RealName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RealName" class="form-control" />
                <span asp-validation-for="RealName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Role" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select class="selectpicker" name="Role" title="Выберите роль">
                    @foreach (DbRole role in Enum.GetValues(typeof(DbRole)))
                    {
                        <option value="@(role)">@role.GetDisplayName()</option>
                    }
                </select>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Meta" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Meta" class="form-control" />
                <span asp-validation-for="Meta" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
