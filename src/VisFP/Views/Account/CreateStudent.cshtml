@model VisFP.Models.AccountViewModels.CreateStudentViewModel

@{
    ViewData["Title"] = $"Добавить студента в группу {Model.GroupName}";
}

<h2>@ViewData["Title"]</h2>
<hr />

<form asp-action="CreateStudent">
    <div class="form-horizontal">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="RealName" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="RealName" class="form-control" />
                <span asp-validation-for="RealName" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Meta" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Meta" class="form-control" />
                <span asp-validation-for="Meta" class="text-danger" />
            </div>
        </div>
        <input asp-for="GroupId" type="hidden" />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="EditGroup" asp-controller="Teacher" asp-route-Id="@Model.GroupId">Обратно к группе</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
