@model VisFP.Models.StatisticViewModels.UserStatViewModel

@{
    ViewData["Title"] = "Статистика пользователя "+ Model.Login;
}

<h2>@ViewData["Title"]</h2>

<div class="form-group">
    <label asp-for="RealName" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <label class="form-control">@Model.RealName</label>
    </div>
</div>
<div class="form-group">
    <label asp-for="Group" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <label class="form-control">@Model.Group</label>
    </div>
</div>
<h3>Созданные варианты</h3>
<table class="table">
    <tr>
        <th>Раздел</th>
        <th>Id варианта</th>
        <th>Дата получения</th>
        <th>Неуспешно</th>
        <th>Успешно</th>
        <th>Не окончено</th>
        <th>Баллы</th>
        <th></th>
    </tr>
    @foreach (var variant in Model.Variants)
    {
        <tr>
            <td>@variant.TasksType</td>
            <td>@variant.Id</td>
            <td>@variant.DateStart</td>
            <td>@variant.FailProblems</td>
            <td>@variant.SuccessProblems</td>
            <td>@variant.UnfinishedProblems</td>
            <td>@variant.TotalScore</td>
            <td><button onclick="deleteVariant('@variant.Id','@Model.Id');">Удалить</button></td>
        </tr>
    }
</table>
