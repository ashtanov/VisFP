@model TaskListViewModel
<h1>@ViewData["Title"]</h1>
@if (Model.TasksList.Any())
{
    <h2>Задачи для тренировки:</h2>
}
<ul>
    @foreach (var t in Model.TasksList.OrderBy(x => x.Item1))
    {
        var href = $"/{Model.TaskControllerName}/Task/{t.Item1}";
        <li><a href="@href">Задача <span>@t.Item1</span>: @t.Item2</a></li>
    }
</ul>

<a asp-action="ExamVariant" class="btn btn-success btn-lg">Сдать контрольный тест</a>
