@model TaskInfoViewModel
<hr />
<h3 style="margin-left:100px">@Model.MainInfo.TaskTitle</h3>
<hr />
<div class="col-lg-5">
        <p style="font-size:x-large; text-indent: 7%">
            <strong>@Html.DisplayNameFor(model => model.MainInfo.TaskQuestion)</strong>
        </p>
        <p class="questionBox">
            @Html.Raw(Model.MainInfo.TaskQuestion)
        </p>
    <hr />
    @if (Model.TopInfo != null)
    {
        await Html.RenderPartialAsync("TaskShared/TaskInfo", Model.TopInfo);
    }
    @{ await Html.RenderPartialAsync("TaskShared/AcceptAnswerView", Model.GetAnswerModel()); }
</div>
@if (Model.ListInfo != null)
{
    <div class="col-lg-2">
        @{ await Html.RenderPartialAsync("TaskShared/TaskInfoList", Model.ListInfo); }
    </div>
}
@if (Model.Graph != null)
{
    <div class="col-lg-5">
        @{await Html.RenderPartialAsync("TaskShared/GraphView", Model.Graph); }
    </div>
}
