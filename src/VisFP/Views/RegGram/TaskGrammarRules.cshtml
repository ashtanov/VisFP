@model RgProblemViewModel
<div class="panel-default">
    <div class="panel-heading"><strong>Правила:</strong></div>
</div>
<ol class="list-group">
    @for (int i = 0; i < Model.Grammar.Rules.Count; i++)
    {
        <li class="list-group-item"><strong>@(i + 1).&emsp;</strong> @Model.Grammar.Rules[i].ToString()</li>
    }
</ol>

