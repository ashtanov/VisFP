@model MainPageViewModel
@{
    ViewData["Title"] = "Главная страница";
}
<h1>@ViewData["Title"]</h1>
@if (Model.IsAdmin)
{
    <a class="btn btn-danger" href="/Admin">Административная зона</a>
}
@if (Model.IsTeacher || Model.IsAdmin)
{
    <a class="btn btn-primary" href="/Teacher">Управление группами и задачами</a>
}
<h2>Выберите раздел задач:</h2>
<div class="list-group col-lg-5">
    <a href="/RegGram" class="list-group-item">1. Регулярные граматики <span class="badge">8</span></a>
    <a href="/Fsm" class="list-group-item">2. Конечные автоматы <span class="badge">3</span></a>
    <a href="#" class="list-group-item">3. Сети петри <span class="badge">0</span></a>
</div>

<td>
    <div id="mynetwork">
        <div class="vis-network" tabindex="900" style="position: relative; overflow: hidden; touch-action: pan-y; user-select: none; -webkit-user-drag: none; -webkit-tap-highlight-color: rgba(0, 0, 0, 0); width: 100%; height: 100%;">
            <canvas width="800" height="600" style="position: relative; touch-action: none; user-select: none; -webkit-user-drag: none; -webkit-tap-highlight-color: rgba(0, 0, 0, 0); width: 100%; height: 100%;"></canvas>
        </div>
    </div>
</td>
<script>
    buildGraph(@Json.Serialize(Model.png),@Html.Raw(Model.png.options));
</script>


